# CI environment file - used by GitHub Actions

# Project name
COMPOSE_PROJECT_NAME=starterpack
COMPOSE_FILE=docker-compose.core.yml:docker-compose.yml
APP_NAME=CI Test App

# Docker user (CI runner)
DOCKER_USER=ci
DOCKER_UID=1001
DOCKER_GID=127

# Traefik (not used in CI but required)
USE_TLS=false
PUBLIC_PORT=80
PUBLIC_WEBSITE_HOST=localhost

# Public URL
PUBLIC_URL=http://localhost

# Auth tokens
TOKEN_HASH_SECRET=ci-test-secret-do-not-use-in-production
TOKEN_HASH_ALG=HS256
USERS_PASSWORD_HASH_SECRET_KEY=ci-test-password-secret

# Database
APP_DB_NAME=app
APP_DB_USER=postgres
APP_DB_PASSWORD=ci-test-password

# i18n
DEFAULT_LOCALE=en

# Disabled services
MAILGUN_DOMAIN=
MAILGUN_API_KEY=
MAILGUN_FROM_NAME=
ADMIN_EMAIL=ci@localhost
BASIC_AUTH=
BASIC_AUTH_EVERYWHERE=
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICING_FREE=

# Umami (disabled in CI)
UMAMI_DB_NAME=umami
UMAMI_DB_USER=umami
UMAMI_DB_PASSWORD=ci-umami-password
UMAMI_APP_SECRET=ci-umami-secret
NUXT_PUBLIC_UMAMI_ENABLED=false
NUXT_PUBLIC_UMAMI_URL=
NUXT_PUBLIC_UMAMI_WEBSITE_ID=
