FROM node:20-alpine3.20
CMD ["npm", "run", "dev"]
EXPOSE 80

ARG DOCKER_USER
ARG DOCKER_UID
ARG DOCKER_GID
ENV NUXT_PORT=80

WORKDIR /app

RUN addgroup -g ${DOCKER_GID} ${DOCKER_USER} || true && \
    RUN adduser -D -u ${DOCKER_UID} ${DOCKER_USER} || true \
    RUN addgroup ${DOCKER_USER} ${DOCKER_USER} || true

COPY *.json *.js *.ts *.vue ./

RUN chown -R ${DOCKER_UID}:${DOCKER_GID} /app

USER $DOCKER_UID

RUN npm install
